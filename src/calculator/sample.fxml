<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<GridPane fx:controller="calculator.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="30" vgap="30" >
    <TextArea fx:id="textArea" GridPane.rowIndex="0" GridPane.columnSpan="4" prefWidth="-NaN" prefHeight="-NaN" />
    <TextField fx:id="textField" GridPane.rowIndex="1" promptText="0" GridPane.columnSpan="4"/>
    <Button  text = "1" onAction="#clickButton" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <Button  text = "2" onAction="#clickButton" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    <Button  text = "3" onAction="#clickButton" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
    <Button  text = "4" onAction="#clickButton" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Button  text = "5" onAction="#clickButton" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <Button  text = "6" onAction="#clickButton" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
    <Button  text = "7" onAction="#clickButton" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Button  text = "8" onAction="#clickButton" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Button  text = "9" onAction="#clickButton" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    <Button  text = "0" onAction="#clickButton" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <Button text = "=" onAction="#equalsButton" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <Button text = "," onAction="#clickButton" GridPane.columnIndex="2" GridPane.rowIndex="5"/>
    <Button text = "/" onAction="#clickButton" GridPane.columnIndex="3" GridPane.rowIndex="5"/>
    <Button text = "+" onAction="#clickButton" GridPane.columnIndex="3" GridPane.rowIndex="4"/>
    <Button text = "-" onAction="#clickButton" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
    <Button text = "*" onAction="#clickButton" GridPane.columnIndex="3" GridPane.rowIndex="2"/>



</GridPane>