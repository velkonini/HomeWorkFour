<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="20" >

    <Button text = "Send message" onAction="#clickButton" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="textField" promptText="Input text" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextArea fx:id = "textArea" GridPane.columnIndex="0" GridPane.rowIndex="0" prefWidth="600" prefHeight="300"/>

</GridPane>